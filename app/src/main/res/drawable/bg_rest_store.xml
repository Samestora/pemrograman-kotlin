<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1️⃣ Base white background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- 2️⃣ Background image aligned to the right -->
    <item
        android:gravity="end"
        android:left="100dp"
        android:top="100dp"
        android:bottom="0dp">
        <bitmap
            android:src="@drawable/store"
            android:alpha="1"
            android:gravity="fill" />
    </item>

    <!-- 3️⃣ Left-to-right white gradient overlay to create the fade effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFFFF"
                android:angle="0" />
        </shape>
    </item>

</layer-list>
