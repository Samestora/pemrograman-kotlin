<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

    <LinearLayout
        android:id="@+id/playerStatsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvStatsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Stats"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Player Name -->
        <TextView
            android:id="@+id/tvPlayerClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class: Nameless"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"/>

        <!-- Health -->
        <TextView
            android:id="@+id/tvPlayerHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health: 80 / 100"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"/>

        <!-- Mana -->
        <TextView
            android:id="@+id/tvPlayerMana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mana: 40 / 60"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"/>

        <!-- Attack -->
        <TextView
            android:id="@+id/tvPlayerAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack: 12"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"/>

        <!-- Defense -->
        <TextView
            android:id="@+id/tvPlayerDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defense: 8"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"/>


        <!-- Gold -->
        <TextView
            android:id="@+id/tvPlayerGold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gold: 230"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnCloseStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close" />
    </LinearLayout>
</ScrollView>
