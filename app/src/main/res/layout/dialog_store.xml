<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tvStoreTitle"
            android:text="Potion Store"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Health Potion Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:text="Health Potion - 20 Gold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnBuyHealthPotion"
                android:text="Buy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Mana Potion Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:text="Mana Potion - 30 Gold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnBuyManaPotion"
                android:text="Buy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvGold"
            android:text="Gold: 0"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="24dp" android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/tvWarning"
            android:text="Not enough gold!"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
        />

        <Button
            android:id="@+id/btnCloseStore"
            android:text="Close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
