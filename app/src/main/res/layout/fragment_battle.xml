<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.sgdc.roguelike.ui.fragment.BattleFragment">

    <!-- Top guideline (5%) and middle (about 60%) to split image area -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintGuide_begin="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.60" />

    <!-- Enemy Background (scales between topGuide and midGuide) -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/topGuide"
        app:layout_constraintBottom_toTopOf="@id/midGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Enemy Name (overlay at top center of image area) -->
    <TextView
        android:id="@+id/enemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="6dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView" tools:text="Enemy Name"/>

    <!-- Enemy container centered under the name -->
    <FrameLayout
        android:id="@+id/enemyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/enemyName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Enemy sprite: adjustViewBounds so it scales on small screens -->
        <ImageView
            android:id="@+id/enemySprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@mipmap/ic_launcher_foreground"
            android:maxWidth="220dp"
            android:maxHeight="360dp"
            android:contentDescription="@null" />
    </FrameLayout>

    <!-- Enemy Health bar (stretches horizontally, responsive) -->
    <FrameLayout
        android:id="@+id/enemyHealthbarContainer"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/enemyContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/enemyHealthbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="75"
            android:progressTint="#C82929" />

        <TextView
            android:id="@+id/monsterHealthText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="100/100"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp" />
    </FrameLayout>

    <!-- Battle message -->
    <TextView
        android:id="@+id/battleMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/enemyHealthbarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Your Turn!" />

    <!-- Bottom area: Buttons + Player stats in a responsive horizontal row -->
    <LinearLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/battleMessage"
        app:layout_constraintBottom_toTopOf="@+id/nextBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Buttons column (fixed button widths so touch targets remain consistent) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Tombol Attack -->
            <LinearLayout
                android:id="@+id/attackButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_action_btn"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:contextClickable="true">

                <ImageView
                    android:id="@+id/attackIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ichunter"
                    android:contentDescription="Attack Icon" />

                <TextView
                    android:id="@+id/attackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attack"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tombol Defend -->
            <LinearLayout
                android:id="@+id/defenseButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_action_btn"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:contextClickable="true">

                <ImageView
                    android:id="@+id/defendIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iccontemplative"
                    android:contentDescription="Defend Icon" />

                <TextView
                    android:id="@+id/defendText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defend"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tombol Skills -->
            <LinearLayout
                android:id="@+id/openSkillButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_action_btn"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:contextClickable="true">

                <ImageView
                    android:id="@+id/skillIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icresearch"
                    android:contentDescription="Skill Icon" />

                <TextView
                    android:id="@+id/skillText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>


        <!-- Spacer -->
        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <!-- Player stats column: uses weight to take remaining horizontal space -->
        <LinearLayout
            android:id="@+id/playerStatsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <FrameLayout
                android:id="@+id/playerHealthContainer"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginBottom="8dp">

                <ProgressBar
                    android:id="@+id/playerHealthbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="75"
                    android:progressTint="#C82929" />

                <TextView
                    android:id="@+id/playerHealthText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100/100"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/playerManaContainer"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <ProgressBar
                    android:id="@+id/playerManaBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="60"
                    android:progressTint="#2934C8" />

                <TextView
                    android:id="@+id/playerManaText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="80/100"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" android:textStyle="bold"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- NEXT button (bottom) -->
    <Button
        android:id="@+id/nextBtn"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="NEXT"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
