<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.GachaFragment"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvGachaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stat Gain"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvGachaResult"
        android:layout_marginBottom="24dp" />

    <!-- Result text -->
    <TextView
        android:id="@+id/tvGachaResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Ready?"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <!-- OK button -->
    <FrameLayout
        android:id="@+id/btnOk"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvGachaResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    >

        <ImageButton
            android:id="@+id/nextStageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/textured_button"/>

        <TextView
            android:id="@+id/nextStageText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="OK"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
